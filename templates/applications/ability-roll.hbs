<form class="flexcol" autocomplete="off">

    <div class="flexrow" id="ability-rolls">
        <select name="roll1" id="roll1" disabled={{disabled_controls}}>
            {{#select ability1}}
            <option value="Str">{{localize 'RYUUTAMA.Ability.Str.abbr'}}</option>
            <option value="Dex">{{localize 'RYUUTAMA.Ability.Dex.abbr'}}</option>
            <option value="Int">{{localize 'RYUUTAMA.Ability.Int.abbr'}}</option>
            <option value="Spi">{{localize 'RYUUTAMA.Ability.Spi.abbr'}}</option>
            {{/select}}
        </select>

        <select name="roll2" id="roll2" disabled={{disabled_controls}}>
            {{#select ability2}}
            <option value="Str">{{localize 'RYUUTAMA.Ability.Str.abbr'}}</option>
            <option value="Dex">{{localize 'RYUUTAMA.Ability.Dex.abbr'}}</option>
            <option value="Int">{{localize 'RYUUTAMA.Ability.Int.abbr'}}</option>
            <option value="Spi">{{localize 'RYUUTAMA.Ability.Spi.abbr'}}</option>
            {{/select}}
        </select>
    </div>

    <div class="flexcol" id="bonuses-list">
        {{#each roll_bonuses}}
        <div class="flexrow" style="margin-top: 0.5em; margin-bottom: 0.5em">
            <span style="flex: 2;">{{this.name}}</span>
            <span style="justify-self: end; flex: 1; text-align: end;">{{this.value}}</span>
            {{#if this.optional}}<input type="checkbox" name={{this.id}}>{{/if}}
        </div>
        {{/each}}
        <div class="flexrow"><span>{{localize 'RYUUTAMA.UseFocus'}}</span><input style="justify-self: end;"
                type="checkbox" name="focus" id="focus" disabled></div>
        <div class="flexrow"><span>{{localize 'RYUUTAMA.UseBlunderPoint'}}</span><input style="justify-self: end;"
                type="checkbox" name="blunder" id="blunder" disabled></div>
    </div>

    <button type="submit">Roll</button>

</form>