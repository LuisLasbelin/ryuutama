<div>
  <!-- COINS -->
  <div class="flexrow" style="align-items: center;">
    <div>
      <div class="flexrow" style="width: 50%;">
        <span class="flexshrink">{{localize "RYUUTAMA.Load"}}</span>
        <div style="align-items: center; justify-content:center;" class="flexrow">({{total_load}} /
          {{#if isNpc}}
          <input class="flexshrink input-small" type="number" name="system.load.max" value={{system.load.max}}>
          {{else}}
          {{max_load}}
          {{/if}})
        </div>
      </div>
      <div style="border: solid black 2px; width: 50%;">
        <div style="height:12px;width:{{percentile_load}}%; background-color: blue;"></div>
      </div>
    </div>
    <div>
      <div class="flexrow">
        <span>{{localize "RYUUTAMA.Coins"}}</span>
        <input type="text" name="system.coins" value={{system.coins}} data-dtype="Number" />
      </div>
      <div class="flexrow">
        <span>{{localize "RYUUTAMA.Wealth"}}</span>
        <span>{{wealth}}</span>
      </div>
    </div>
  </div>
  <ol class='items-list'>
    <!-- WEAPONS -->
    <li class='item flexrow items-header'>
      <div style="flex:2;" class='item-name'>{{localize 'RYUUTAMA.Item.Weapons'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Weapon.AttackRoll'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Weapon.DamageRoll'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Price'}}</div>
      <div class='item-controls'>
        <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Weapon'}}' data-type='weapon'>
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type='weapon'}}
        </a>
      </div>
    </li>
    {{#each weapons as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div style="flex:2;" class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div style="flex:1;" class='item-formula item-prop'>
        {{item.system.attack_formula.roll1}}+{{item.system.attack_formula.roll2}}{{#if
        item.system.attack_formula.diceBonus}}{{item.system.attack_formula.diceBonus}}{{/if}}
      </div>
      <div style="flex:1;" class='item-formula item-prop'>
        {{item.system.damage_formula.roll1}}{{#if
        item.system.damage_formula.diceBonus}}{{item.system.damage_formula.diceBonus}}{{/if}}</div>
      <div style="flex:1;" class='item-formula item-prop'>{{item.system.price}}</div>

      <div class='item-controls'>
        {{#if item.system.equiped}}
        <a class='item-control item-equip' title='{{localize "DOCUMENT.Equip" type=' Item'}}'>
          <i class='fas fa-hand'></i>
        </a>
        {{else}}
        <a class='item-control item-equip' title='{{localize "DOCUMENT.Equip" type=' Item'}}'>
          <i class='far fa-hand'></i>
        </a>
        {{/if}}
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/each}}
    <!-- SHIELDS -->
    <li class='item flexrow items-header'>
      <div style="flex:2;" class='item-name'>{{localize 'RYUUTAMA.Item.Shields'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Defense'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Armor.Handicap'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Shield.Dodge'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Price'}}</div>
      <div class='item-controls'>
        <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' shield'}}' data-type='shield'>
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type='shield'}}
        </a>
      </div>
    </li>
    {{#each shields as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div style="flex:2;" class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div style="flex:1;" class='item-formula item-prop'>
        {{item.system.defense}}
      </div>
      <div style="flex:1;" class='item-formula item-prop'>
        {{item.system.handicap}}
      </div>
      <div style="flex:1;" class='item-formula item-prop'>
        {{item.system.dodge}}
      </div>
      <div style="flex:1;" class='item-formula item-prop'>{{item.system.price}}</div>
      <div class='item-controls'>
        {{#if item.system.equiped}}
        <a class='item-control item-equip' title='{{localize "DOCUMENT.Equip" type=' Item'}}'>
          <i class='fas fa-hand'></i>
        </a>
        {{else}}
        <a class='item-control item-equip' title='{{localize "DOCUMENT.Equip" type=' Item'}}'>
          <i class='far fa-hand'></i>
        </a>
        {{/if}}
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/each}}
    <!-- ARMOR -->
    <li class='item flexrow items-header'>
      <div style="flex:2;" class='item-name'>{{localize 'RYUUTAMA.Item.Armours'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Defense'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Armor.Handicap'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Price'}}</div>
      <div class='item-controls'>
        <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Armor'}}' data-type='armor'>
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type='armor'}}
        </a>
      </div>
    </li>
    {{#each armor as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div style="flex:2;" class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div style="flex:1;" class='item-formula item-prop'>
        {{item.system.defense}}
      </div>
      <div style="flex:1;" class='item-formula item-prop'>
        {{item.system.handicap}}
      </div>
      <div style="flex:1;" class='item-formula item-prop'>{{item.system.price}}</div>
      <div class='item-controls'>
        {{#if item.system.equiped}}
        <a class='item-control item-equip' title='{{localize "DOCUMENT.Equip" type=' Item'}}'>
          <i class='fas fa-shirt'></i>
        </a>
        {{else}}
        <a class='item-control item-equip' title='{{localize "DOCUMENT.Equip" type=' Item'}}'>
          <i class='far fa-shirt'></i>
        </a>
        {{/if}}
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/each}}
    <!-- CONTAINERS -->
    <li class='item flexrow items-header'>
      <div class='item-name'>{{localize 'RYUUTAMA.Item.Containers'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Capacity'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Price'}}</div>
      <div class='item-controls'>
        <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}' data-type='container'>
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type='container'}}
        </a>
      </div>
    </li>
    {{#each containers as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div style="flex:1;display: flex;justify-content: space-evenly;" class='item-formula item-prop'>
        {{#if item.system.liquid.hasLiquid}}
        <a class="minus-quantity"><i class='fas fa-minus'></i></a>
        {{item.system.liquid.value}} / {{item.system.liquid.max}}
        <a class="plus-quantity"><i class='fas fa-plus'></i></a>
        {{else}}
        {{item.system.capacity}}
        {{/if}}
      </div>
      <div style="flex:1;" class='item-formula item-prop'>{{item.system.price}}</div>
      <div class='item-controls'>
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/each}}
    <!-- GOODS & MISC -->
    <li class='item flexrow items-header'>
      <div class='item-name'>{{localize 'RYUUTAMA.Item.Items'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Quantity'}}</div>
      <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Price'}}</div>
      <div class='item-controls'>
        <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}' data-type='item'>
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type='item'}}
        </a>
      </div>
    </li>
    {{#each gear as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div style="flex:1;display: flex;justify-content: space-evenly;" class='item-formula item-prop'>
        <a class="minus-quantity"><i class='fas fa-minus'></i></a>
        {{item.system.quantity}}
        <a class="plus-quantity"><i class='fas fa-plus'></i></a>
      </div>
      <div style="flex:1;" class='item-formula item-prop'>{{item.system.price}}</div>
      <div class='item-controls'>
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/each}}
  </ol>
</div>