<!-- COINS -->
<div class="flexrow" style="align-items: center;">
  <span>{{localize "RYUUTAMA.Coins"}}</span>
  <input type="text" name="system.coins" value={{system.coins}} data-dtype="Number" />
  <span>{{localize "RYUUTAMA.Wealth"}}</span>
  <span>{{wealth}}</span>
</div>
<ol class='items-list'>
  <!-- WEAPONS -->
  <li class='item flexrow items-header'>
    <div style="flex:2;" class='item-name'>{{localize 'RYUUTAMA.Item.Weapons'}}</div>
    <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Weapon.AttackRoll'}}</div>
    <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Weapon.DamageRoll'}}</div>
    <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Price'}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Weapon'}}' data-type='weapon'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='weapon'}}
      </a>
    </div>
  </li>
  {{#each weapons as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div style="flex:2;" class='item-name'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <h4>{{item.name}}</h4>
    </div>
    <div style="flex:1;" class='item-formula item-prop'>
      {{item.system.attack_formula.roll1}}+{{item.system.attack_formula.roll2}}+{{item.system.attack_formula.diceBonus}}
    </div>
    <div style="flex:1;" class='item-formula item-prop'>
      {{item.system.damage_formula.roll1}}+{{item.system.attack_formula.diceBonus}}</div>
    <div style="flex:1;" class='item-formula item-prop'>{{item.system.price}}</div>

    <div class='item-controls'>
      {{#if item.system.equiped}}
      <a class='item-control item-equip' title='{{localize "DOCUMENT.Equip" type=' Item'}}'>
        <i class='fas fa-hand'></i>
      </a>
      {{else}}
      <a class='item-control item-equip' title='{{localize "DOCUMENT.Equip" type=' Item'}}'>
        <i class='far fa-hand'></i>
      </a>
      {{/if}}
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
  <!-- ARMOR -->
  <li class='item flexrow items-header'>
    <div style="flex:2;" class='item-name'>{{localize 'RYUUTAMA.Item.Armours'}}</div>
    <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Defense'}}</div>
    <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Armor.Handicap'}}</div>
    <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Price'}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Armor'}}' data-type='armor'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='armor'}}
      </a>
    </div>
  </li>
  {{#each armor as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div style="flex:2;" class='item-name'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <h4>{{item.name}}</h4>
    </div>
    <div style="flex:1;" class='item-formula item-prop'>
      {{item.system.defense}}
    </div>
    <div style="flex:1;" class='item-formula item-prop'>
      {{item.system.handicap}}
    </div>
    <div style="flex:1;" class='item-formula item-prop'>{{item.system.price}}</div>
    <div class='item-controls'>
      {{#if item.system.equiped}}
      <a class='item-control item-equip' title='{{localize "DOCUMENT.Equip" type=' Item'}}'>
        <i class='fas fa-shirt'></i>
      </a>
      {{else}}
      <a class='item-control item-equip' title='{{localize "DOCUMENT.Equip" type=' Item'}}'>
        <i class='far fa-shirt'></i>
      </a>
      {{/if}}
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
  <!-- GOODS & MISC -->
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'RYUUTAMA.Item.Items'}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}' data-type='item'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='item'}}
      </a>
    </div>
  </li>
  {{#each gear as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div class='item-name'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <h4>{{item.name}}</h4>
    </div>
    <div class='item-controls'>
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>
<footer style="width: 50%; bottom: 12px; position: absolute;">
  <div style="display: flex; flex-direction:row:">
    <h4 style="flex: 1;">{{localize "RYUUTAMA.Load"}} ({{total_load}} / {{max_load}}) + </h4>
    <input style="flex: 1;" type="text" data-dtype="Number" name="system.load.mod" value={{system.load.mod}} />
  </div>
  <div style="border: solid black 2px;">
    <div style="height:12px;width:{{percentile_load}}%; background-color: blue;"></div>
  </div>
</footer>