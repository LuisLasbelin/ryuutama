<ol class='items-list'>
  <!-- LEVEL -->
  <div class="resource flex-group-center">
    <div>
      <span class="resource-content flexrow">
        <label class="flexshrink">{{localize 'RYUUTAMA.Exp'}}</label>
        <input type="number" name="system.attributes.level.exp" value="{{system.attributes.level.exp}}"
          data-dtype="Number" class="flexshrink input-small" />
        <progress id="next-level" value={{system.attributes.level.exp}} max={{next_exp}}>
          {{system.attributes.level.exp}} </progress>
      </span>
    </div>
  </div>
  <!-- SKILLS -->
  <li class='item flexrow items-header'>
    <div style="flex:2;" class='item-name'>{{localize 'RYUUTAMA.Skills'}}</div>
    <div style="flex:1;" class='item-formula'>{{localize 'RYUUTAMA.Item.Feature.UseRoll'}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='Create item' data-type='feature'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='feature'}}
      </a>
    </div>
  </li>
  {{#each features as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div style="flex: 2;" class='item-name'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <h4>{{item.name}}</h4>
    </div>
    <div style="flex: 1;" class='item-formula item-prop'>
      {{#if item.system.has_roll}}
      {{item.system.formula.roll1}}+{{item.system.formula.roll2}}
      {{#if item.system.formula.diceBonus}}+{{item.system.formula.diceBonus}}{{/if}}
      {{else}}
      {{localize 'RYUUTAMA.Item.Passive'}}
      {{/if}}
    </div>
    <div class='item-controls'>
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' feature'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' feature'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>